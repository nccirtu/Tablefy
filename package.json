{
  "name": "@nccirtu/tablefy",
  "version": "0.7.1",
  "description": "A powerful, type-safe React table package built with TanStack Table and shadcn/ui components",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "tablefy": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "rollup -c",
    "build:cli": "tsup cli/index.ts --outDir dist/cli --format esm --target node18",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "table",
    "data-table",
    "shadcn-ui",
    "tanstack-table",
    "typescript",
    "react-table",
    "data-grid",
    "ui-components",
    "tailwind"
  ],
  "author": "Cirtu Cristian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nccirtu/Tablefy.git"
  },
  "bugs": {
    "url": "https://github.com/nccirtu/Tablefy/issues"
  },
  "homepage": "https://github.com/nccirtu/Tablefy#readme",
  "files": [
    "dist",
    "cli/templates",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0",
    "@tanstack/react-table": "^8.0.0",
    "lucide-react": ">=0.300.0",
    "class-variance-authority": ">=0.7.0",
    "clsx": ">=2.0.0",
    "tailwind-merge": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-table": {
      "optional": false
    },
    "lucide-react": {
      "optional": false
    },
    "class-variance-authority": {
      "optional": false
    },
    "clsx": {
      "optional": false
    },
    "tailwind-merge": {
      "optional": false
    }
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./columns": {
      "types": "./dist/columns/index.d.ts",
      "import": "./dist/columns/index.esm.js",
      "require": "./dist/columns/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "columns": [
        "dist/columns/index.d.ts"
      ]
    }
  }
}
