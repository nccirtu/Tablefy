  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "table",
    "data-table",
    "shadcn-ui",
    "tanstack-table",
    "typescript",
    "react-table",
    "data-grid",
    "ui-components",
    "tailwind"
  ],
  "author": "Cirtu Cristian <your-email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nccirtu/Tablefy.git"
  },
  "bugs": {
    "url": "https://github.com/nccirtu/Tablefy/issues"
  },
  "homepage": "https://github.com/nccirtu/Tablefy#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@tanstack/react-table": "^8.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "radix-ui": "^1.4.3",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "jest": "^29.5.0",
    "rollup": "^3.20.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./columns": {
      "import": "./dist/columns/index.esm.js",
      "require": "./dist/columns/index.js",
      "types": "./dist/columns/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "columns": [
        "dist/columns/index.d.ts"
      ]
    }
  }
