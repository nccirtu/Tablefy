{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "dist/cli",
    "rootDir": "cli",
    "resolveJsonModule": true
  },
  "include": ["cli/**/*.ts"],
  "exclude": ["cli/templates", "node_modules"]
}
